//- Init
mixin icon(icons)
  if icons.apple
    if debugComments
      // ==== ICONS-APPLE ==== 
    +icon-apple(icons.apple)
    if debugComments
      // ==== END ICONS-APPLE ==== 

  if icons.basic
    if debugComments
      // ==== ICONS-BASIC ==== 
    +icon-basic(icons.basic)
    if debugComments
      // ==== END ICONS-BASIC ==== 

  if icons.favicon
    if debugComments
      // ==== ICONS-FAVICON ==== 
    +icon-favicon(icons.favicon)
    if debugComments
      // ==== END ICONS-FAVICON ==== 

//- Apple
mixin icon-apple(icons)
  each iconSize in icons.sizes
    link(
      rel="apple-touch-icon"
      sizes= iconSize
      href="#{icons.src}#{icons.namebase}-#{iconSize}.png"
    )

//- Basic
mixin icon-basic(icons)
  each iconSize in icons.sizes
    link(
      rel="icon"
      type="image/png"
      sizes= iconSize
      href="#{icons.src}#{icons.namebase}-#{iconSize}.png"
    )

//- Favicon
mixin icon-favicon(icon)
  link(
    rel="icon"
    href= icon.src
    type="image/x-icon"
  )
